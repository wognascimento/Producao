<UserControl x:Class="Producao.Views.CheckList.CopiaChklist"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Producao.Views.CheckList" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="SIGLA:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <telerik:RadComboBox 
                x:Name="rcbSiglas" 
                Grid.Column="1"
                ItemsSource="{Binding Siglas}"
                VerticalAlignment="Center"
                SelectionChanged="rcbSiglas_SelectionChanged"/>

            <TextBlock Grid.Column="3" 
                       Text="ANO:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <telerik:RadComboBox 
                x:Name="rcbAnos"
                Grid.Column="4"
                ItemsSource="{Binding Anos}"
                VerticalAlignment="Center"
                SelectionChanged="rcbAnos_SelectionChanged"/>
        </Grid>

        <!-- Grid de Itens -->
        <GroupBox Grid.Row="1" 
                  Header="Itens Check-List"
                  Margin="0,0,0,10">
            <telerik:RadGridView 
                x:Name="rgViewItens"
                IsReadOnly="True"
                ItemsSource="{Binding Itens}"
                AutoGenerateColumns="False"
                ShowGroupPanel="False"
                CanUserFreezeColumns="False"
                Margin="5" FontSize="8" FontFamily="Arial">
                <telerik:RadGridView.Columns>
                    <telerik:GridViewDataColumn Header="ID" 
                                                DataMemberBinding="{Binding ordem}"/>
                    <telerik:GridViewDataColumn Header="ITEM" 
                                                DataMemberBinding="{Binding item_memorial}" 
                                                Width="60"/>
                    <telerik:GridViewDataColumn Header="LOCAL DO SHOPPING" 
                                                DataMemberBinding="{Binding local_shoppings}" 
                                                Width="150"/>
                    <telerik:GridViewDataColumn Header="QTD CHK" 
                                                DataMemberBinding="{Binding qtd_chk}" 
                                                TextAlignment="Right"/>
                    <telerik:GridViewDataColumn Header="PLANILHA" 
                                                DataMemberBinding="{Binding planilha}" 
                                                Width="100"/>
                    <telerik:GridViewDataColumn Header="DESCRIÇÃO" 
                                                DataMemberBinding="{Binding descricao_completa}" 
                                                Width="*"/>
                    <telerik:GridViewDataColumn Header="QTD COMPL" 
                                                DataMemberBinding="{Binding qtd_comple}" 
                                                TextAlignment="Right"/>
                </telerik:RadGridView.Columns>
            </telerik:RadGridView>
        </GroupBox>

        <!-- Botões -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="COPIAR" 
                    Click="Button_Click"
                    Width="100" 
                    Height="30"
                    Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
