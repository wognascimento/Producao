<UserControl x:Class="Producao.Views.ViewAprovado"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:local="clr-namespace:Producao.Views" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Loaded="UserControl_Loaded" Initialized="UserControl_Initialized" Unloaded="UserControl_Unloaded">

    <Grid>
        <Syncfusion:SfDataGrid 
            Name="itens" 
            ItemsSource="{Binding Aprovados}" 
            ColumnSizer="AutoLastColumnFill" 
            AllowFiltering="True" AutoGenerateColumns="False"
            FrozenColumnCount="12"
            AllowResizingColumns="True" 
            SelectionUnit="Row"
            SelectionMode="Extended"
            GridCopyOption="CopyData,IncludeHeaders,IncludeFormat"
            CurrentCellEndEdit="OnCurrentCellEndEdit" 
            CurrentCellValueChanged="OnCurrentCellValueChanged" 
            RowValidated="itens_RowValidated">
            <Syncfusion:SfDataGrid.Columns>
                <Syncfusion:GridTextColumn HeaderText="Evento" MappingName="tipo_evento" ColumnSizer="SizeToCells"/>
                <Syncfusion:GridNumericColumn MappingName="ordem" NumberDecimalDigits="2" AllowEditing="True"/>
                <Syncfusion:GridNumericColumn HeaderText="Ordem Sigla Serviço" MappingName="ordem_sigla_serv" NumberDecimalDigits="0" AllowEditing="True"/>
                <Syncfusion:GridTextColumn MappingName="nivel" AllowEditing="True"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Data Aprovado" MappingName="data_aprovado"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Data Expedição" MappingName="data_de_expedicao"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Meta Producao" MappingName="meta_producao"/>
                <Syncfusion:GridTextColumn MappingName="sigla"/>
                <Syncfusion:GridTextColumn HeaderText="Sigla Serviço" MappingName="sigla_serv"/>
                <Syncfusion:GridTextColumn MappingName="rede"/>
                <Syncfusion:GridTextColumn MappingName="nome"/>
                <Syncfusion:GridTextColumn MappingName="tema"/>
                <Syncfusion:GridNumericColumn HeaderText="Projeto Novo" MappingName="projeto_novo" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Obs Especial" MappingName="obs_especial" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Resp Cliente" MappingName="resp_cliente"/>
                <Syncfusion:GridTextColumn MappingName="est"/>
                <Syncfusion:GridTextColumn MappingName="cidade"/>
                <Syncfusion:GridTextColumn MappingName="memo_resp" AllowEditing="True"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Memo Data" MappingName="memo_data" AllowEditing="True"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Cronog Data" MappingName="cronog_data" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Cronog Resp" MappingName="cronog_resp" AllowEditing="True"/>
                <!--<Syncfusion:GridTextColumn HeaderText="As Built Plantas" MappingName="AsBuiltPlantas" AllowEditing="True"/>-->
                <!--<Syncfusion:GridDateTimeColumn HeaderText="As Built Plantas Data" MappingName="AsBuiltPlantasData" AllowEditing="True"/>-->
                <Syncfusion:GridTextColumn HeaderText="Rel Inflamabilidade" MappingName="rel_inflamabilidade" AllowEditing="True"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Data Rel Inflamabilidade" MappingName="data_rel_inflamabilidade" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Meta Rel Inflamabilidade" MappingName="meta_rel_inflamabilidade" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Pa" MappingName="pa" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Acabamento Construção" MappingName="acabamento_construcao" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Acabamento Fibra" MappingName="acabamento_fibra" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Acabamento Moveis" MappingName="acabamento_moveis" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Laço" MappingName="laco" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Cor Predominante" MappingName="cor_predominante" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Iluminação" MappingName="mlamp_led" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Obs Iluminação" MappingName="obs_iluminacao" AllowEditing="True"/>
                <Syncfusion:GridTextColumn HeaderText="Resp Memo Visual" MappingName="resp_memo_visual" AllowEditing="True"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Data Memo Visual" MappingName="data_memo_visual" AllowEditing="True"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Data Reunião Conceito" MappingName="data_reuniao_conceito" AllowEditing="True"/>

                <Syncfusion:GridTextColumn HeaderText="Resp Revisão Planta Base" MappingName="resp_revisao_planta_base"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Data Conclusão Revisão Planta Base" MappingName="data_revisao_planta_base"/>
                <Syncfusion:GridTextColumn HeaderText="Resp Planta Praça" MappingName="resp_planta_pca" />
                <Syncfusion:GridDateTimeColumn HeaderText="Prazo Planta Praça" MappingName="prazo_planta_pca" AllowNullValue="True"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Data Conclusão Planta Praça" MappingName="liberacao_planta_pca"/>


                <!--                
                <Syncfusion:GridComboBoxColumn
                    ItemsSource="{Binding RespPlantaPca}"
                    AllowEditing="True"
                    HeaderText="Resp Planta Pça" 
                    MappingName="RespPlantaPca"
                    ColumnSizer="SizeToHeader"/>
                
                <Syncfusion:GridDateTimeColumn HeaderText="Prazo Planta Pça" MappingName="PrazoPlantaPca" AllowEditing="True" AllowNullValue="True"/>
                <Syncfusion:GridDateTimeColumn HeaderText="Conclusão Planta Pça" MappingName="ConclusaoPlantaPca" AllowEditing="True" AllowNullValue="True"/>
